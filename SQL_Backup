-----Create Purchases Schema-----
CREATE SCHEMA purchases
-----Crate new tables for purchases-----

---items---
CREATE TABLE items
(
    Order_Date date,
    Order_ID text,
    Title text,
    Category text,
    ASIN_ISBN text,
    UNSPSC_Code text,
    Website text,
    Release_Date date,
    Condition text,
    Seller text,
    Seller_Credentials text,
    List_Price_Per_Unit money,
    Purchase_Price_Per_Unit money,
    Quantity int,
    Payment_Instrument_Type text,
    Purchase_Order_Number text,
    PO_Line_Number text,
    Ordering_Customer_Email text,
    Shipment_Date date,
    Shipping_Address_Name text,
    Shipping_Address_Street_1 text,
    Shipping_Address_Street_2 text,
    Shipping_Address_City text,
    Shipping_Address_State text,
    Shipping_Address_Zip text,
    Order_Status text,
    Carrier_Name_And_Tracking_Number text,
    Item_Subtotal money,
    Item_Subtotal_Tax money,
    Item_Total money,
    Tax_Exemption_Applied money,
    Tax_Exemption_Type money,
    Exemption_Opt_Out money,
    Buyer_Name text,
    Currency text,
    Group_Name text,
    PRIMARY KEY (Order_ID)
);

---ordersandshipments---
CREATE TABLE ordersandshipments
(
    Order_Date varchar (256),
    Order_ID varchar (256),
    Payment_Instrument_Type varchar (256),
    Website varchar (256),
    Purchase_Order_Number varchar (256),
    Ordering_Customer_Email varchar (256),
    Shipment_Date varchar (256),
    Shipping_Address_Name varchar (256),
    Shipping_Address_Street_1 varchar (256),
    Shipping_Address_Street_2 varchar (256),
    Shipping_Address_City varchar (256),
    Shipping_Address_State varchar (256),
    Shipping_Address_Zip varchar (256),
    Order_Status varchar (256),
    Carrier_Name_And_Tracking_Number varchar (256),
    Subtotal varchar (256),
    Shipping_Charge varchar (256),
    Tax_Before_Promotions varchar (256),
    Total_Promotions varchar (256),
    Tax_Charged varchar (256),
    Total_Charged varchar (256),
    Buyer_Name varchar (256),
    Group_Name varchar (256),
    PRIMARY KEY (Order_ID)
);